<!--  机器  -->
<template name="mechine">
  <view class="mechineNumber dd-row dd-v-center">
    <view class="left dd-side-r">
      <image src="/assets/img/logo.png" alt="" />
    </view>
    <view class="right dd-column">
      <view>智能早餐机 012 号</view>
      <view class="dd-row dd-h-2side">
